{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./lib",
    "declaration": false, // unforunately, to make importing easier in other projects, we need to set this to false
    "declarationMap": false, // true
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "esModuleInterop": true,
    "lib": ["ES2021"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "noImplicitReturns": true,
    "paths": {},
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2021"
  },
  "include": ["lib", "typings"],
  "exclude": ["node_modules", "dist"]
}
