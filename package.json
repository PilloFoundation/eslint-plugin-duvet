{
  "name": "@duvetjs/eslint-plugin-duvet",
  "version": "0.0.2",
  "description": "Runs duvet validation rules as part of eslint",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/cjs/index.js",
    "default": "./dist/index.js"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./dist",
    "build:esnext": "tsc --outDir dist",
    "build:cjs": "babel dist --out-dir dist/cjs --extensions \".js,.ts\"",
    "copy:types": "cpx 'dist/**/*.d.ts' dist/cjs",
    "build": "yarn clean && yarn build:esnext && yarn build:cjs && yarn copy:types",
    "test": "echo \"No tests yet\" && exit 0",
    "prepublishOnly": "yarn build"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0"
  },
  "dependencies": {
    "@typescript-eslint/types": "^7.13.1",
    "@typescript-eslint/utils": "^7.13.1",
    "eslint": "^9.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.7",
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@types/eslint": "^8.56.10",
    "@types/node": "^20.14.5",
    "@typescript-eslint/rule-tester": "^7.13.1",
    "cpx": "^1.5.0",
    "eslint-doc-generator": "^1.7.1",
    "eslint-plugin-eslint-plugin": "^6.1.0",
    "rimraf": "^5.0.7",
    "typescript": "^5.4.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
